{
    "compilerOptions": {
        "removeComments": true,
        "module": "commonjs",
        "allowJs": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "types": [
            "node",
            "pg",
            "tape"
        ]
    },

    "exclude": [
        "node_modules"
    ],

    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
